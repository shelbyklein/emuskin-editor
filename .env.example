# Copy this file to .env and fill in your values

# WordPress Integration
VITE_WORDPRESS_URL=https://playcase.gg
VITE_OAUTH_CLIENT_ID=your-client-id-here
VITE_OAUTH_CLIENT_SECRET=your-client-secret-here
VITE_OAUTH_REDIRECT_URI=http://localhost:8008/auth/callback

# Backend API (optional - only if you have a backend server)
VITE_API_URL=http://localhost:3001/api

# Cloudflare R2 Storage (optional - for image storage)
# Set VITE_USE_R2_STORAGE to true to enable R2 storage
# You'll need to deploy the Cloudflare Worker first
VITE_USE_R2_STORAGE=false
VITE_R2_WORKER_URL=https://your-worker.workers.dev
VITE_R2_PUBLIC_URL=https://pub-your-account.r2.dev

# Feature Flags (optional)
VITE_ENABLE_AUTH=true
VITE_ENABLE_CLOUD_SYNC=true